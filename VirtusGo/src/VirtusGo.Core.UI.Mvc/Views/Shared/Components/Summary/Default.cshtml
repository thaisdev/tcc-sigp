@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Any())
{
    <div class="box-body">
        <div class="alert alert-danger  alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <h3><i class="icon fa fa-warning"></i> Opss.. Alguma coisa deu errado!</h3>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>

}

@if (!string.IsNullOrEmpty(ViewBag.Sucesso))
{
    <div class="box-body">
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i> Otimo!</h4>
            <h3>@ViewBag.Sucesso</h3>
        </div>
    </div>
}
