    <script src="/Content/plugins/morris/morris.min.js"></script>

    <script>
        $(function () {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
            $(".select2").select2();

            $(".control-label").css("text-align", "");

            $(document).ready(function () {
                $('[data-toggle="tooltip"]').tooltip();
            });
        });
