@model VirtusGo.Core.Application.ViewModels.CidadeViewModel
<div class="box-body">
    <div class="row">
        <div class="form-horizontal">
            <div class="col-xs-12">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => Model.NomeCidade, new {htmlAttributes = new {@class = "form-control", @placeholder = "Nome"}})
                    </div>
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Label("Estado")
                    </div>
                    <div class="col-md-12">
                        <select asp-for="EstadoId" asp-items="@(new SelectList(@ViewBag.FillEstados, "Value", "Text"))" class="form-control select2"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="box-footer">
    <button type="submit" class="btn btn-info pull-right">Cadastrar</button>
</div>