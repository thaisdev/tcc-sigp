@model IEnumerable<VirtusGo.Core.Application.ViewModels.ListarUsuariosViewModel>
@*@using VirtusGo.Core.SharedKernel.Extensions;*@


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Usuários
            <small>Listar</small>
        </h1>
        @Html.Partial("_ErrorSummary")
        <ol class="breadcrumb">
            <li><a href="/administrativo-usuarios/incluir-novo" class="btn btn-block btn-success btn-sm" style="color: white">
                <span class="glyphicon glyphicon-plus"></span> Novo
            </a></li>
        
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Usuários Cadastrados</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="myTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th class="text-center">Nome</th>
                                    <th class="text-center">Email</th>
                                    <th class="text-center">Opções</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<div class="modal fade" id="DeleteModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #228b22; color: white">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Confirmação</h4>
            </div>
            <h3 class="text-center text-danger">Tem certeza que deseja excluir os dados abaixo?</h3>
            @using (Html.BeginForm("Delete", "Usuario", FormMethod.Post))
            {
                <div class="modal-body" style="height: 150px;">
                    <div class="row">
                        <div class="box-body">
                            <h4>
                                <label>ID:</label> <label id="myID" name="myID" value="" style="font-weight: lighter; font-family: Arial;"></label> <br/>
                                <label>Nome:</label> <label id="Nome" name="Nome" value="" style="font-weight: lighter; font-family: Arial;"></label> <br/>
                                <label>Email:</label> <label id="Email" name="Email" value="" style="font-weight: lighter; font-family: Arial"></label><br/>
                            </h4>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <p class="text-warning pull-left">Grupo|MNS</p>
                    <div class="pull-right">

                        <input type="hidden" id="txtidentify" name="txtidentify"/>
                        <input id="btnExcluir" type="submit" class="btn btn-danger" value="Excluir"/>
                        <input id="btnVoltar" type="button" class="btn btn-default" data-dismiss="modal" value="Voltar"/>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

