<div class="box-body">
    <div class="row">
        <div class="form-horizontal">
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("PedidoCompra", new { htmlAttributes = new { @class = "cpfcnpj form-control", @placeholder = "Pedido de Compra" } })
                    </div>
                </div>
            </div>
            
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Produto", new {htmlAttributes = new {@class = "form-control", @placeholder = "Produto"}})
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("NroNF", new {htmlAttributes = new {@class = "form-control", @placeholder = "Nro NF"}})
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("QtdProdutos", new {htmlAttributes = new {@class = "form-control", @placeholder = "Quantidade de Produtos"}})
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="box-footer">
    <button type="submit" class="btn btn-info pull-right">Cadastrar</button>
</div>
