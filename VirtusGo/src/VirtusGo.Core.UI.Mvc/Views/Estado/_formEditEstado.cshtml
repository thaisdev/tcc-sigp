@model VirtusGo.Core.Application.ViewModels.EstadoViewModel
<div class="box-body">
    <div class="row">
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.Id)
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => Model.NomeEstado, new {htmlAttributes = new {@class = "form-control", @placeholder = "Nome"}})
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.SiglaEstado, new {htmlAttributes = new {@class = "form-control", @placeholder = "Sigla"}})
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="box-footer">
    <button type="submit" class="btn btn-info pull-right">Salvar</button>
</div>