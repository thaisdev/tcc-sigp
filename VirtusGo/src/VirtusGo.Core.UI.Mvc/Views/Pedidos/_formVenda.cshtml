    <div class="row">
        <div class="form-horizontal">
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Cliente", new { htmlAttributes = new { @class = "form-control", @placeholder = "Cliente" } })
                    </div>
                </div>
            </div>
            
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("CondPagamento", new {htmlAttributes = new {@class = "form-control", @placeholder = "Condição de Pagamento"}})
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Observação", new {htmlAttributes = new {@class = "form-control", @placeholder = "Observação"}})
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Produto", new {htmlAttributes = new {@class = "form-control", @placeholder = "Produto"}})
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Quantidade", new {htmlAttributes = new {@class = "form-control", @placeholder = "Quantidade"}})
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("ValorUnitario", new {htmlAttributes = new {@class = "cepMask form-control", @placeholder = "Valor Unitário"}})
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="box-footer">
    <button type="submit" class="btn btn-info pull-right">Cadastrar</button>
</div>
