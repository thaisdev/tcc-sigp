<div class="box-body">
    <div class="row">
        <div class="form-horizontal">
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Razao", new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome Completo ou Razão Social" } })
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Documento", new { htmlAttributes = new { @class = "cpfcnpj form-control", @placeholder = "CPF ou CNPJ" } })
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("InscricaoRG", new { htmlAttributes = new { @class = "form-control", @placeholder = "Inscrição Estadual ou RG" } })
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Telefone", new { htmlAttributes = new { @class = "form-control fonemask", @placeholder = "Telefone" } })
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control", @placeholder = "EMail" } })
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Endereço", new { htmlAttributes = new { @class = "cepMask form-control", @placeholder = "Endereço" } })
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Bairro", new { htmlAttributes = new { @class = "form-control", @placeholder = "Bairro" } })
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("Cidade", new { htmlAttributes = new { @class = "form-control", @placeholder = "Cidade" } })
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @* <select asp-items="@(new SelectList(@ViewBag.Ufs, "Value", "Text"))" class="form-control"></select> *@
                        @Html.Editor("Estado", new { htmlAttributes = new { @class = "form-control", @placeholder = "Estado" } })
                    </div>
                </div>
            </div>

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Editor("WebSite", new { htmlAttributes = new { @class = "form-control", @placeholder = "Web Site" } })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="box-footer">
    <button type="submit" class="btn btn-info pull-right">Cadastrar</button>
</div>
