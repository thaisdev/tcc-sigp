@model VirtusGo.Core.Application.ViewModels.ListarProdutosViewModel
<div class="box-body">
    <div class="row">
        <div class="form-horizontal">
            <input type="hidden" value="@ViewBag.ListarProdutos" id="teste" name="teste"/>
            @foreach (var item in ViewBag.ListarProdutos)
            {
                <div class="col-xs-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <label>@item.NomeProduto</label>
                        </div>
                        <div class="col-md-6">
                            <input type="number" class="form-control" name="@item.NomeProduto" id="@item.NomeProduto"/>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="box-footer">
    <button id="btnCadastrar" class="btn btn-info pull-right">Cadastrar</button>
</div>